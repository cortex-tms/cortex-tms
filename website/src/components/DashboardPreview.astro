<script>
  document.addEventListener('DOMContentLoaded', () => {
    const previews = document.querySelectorAll('.dashboard-preview')
    previews.forEach((preview) => {
      const tabs = preview.querySelectorAll<HTMLButtonElement>('.dp-tab')
      const views = preview.querySelectorAll<HTMLElement>('.dp-view')

      tabs.forEach((tab) => {
        tab.addEventListener('click', () => {
          const target = tab.dataset.view

          tabs.forEach((t) => {
            t.classList.remove('dp-tab-active')
            t.setAttribute('aria-selected', 'false')
            // Hide brackets visually for inactive tabs while keeping layout stable
            const brackets = t.querySelectorAll('.dp-tab-bracket')
            brackets.forEach((b) => ((b as HTMLElement).style.opacity = '0'))
          })
          views.forEach((v) => v.classList.remove('dp-view-active'))

          tab.classList.add('dp-tab-active')
          tab.setAttribute('aria-selected', 'true')
          const activeBrackets = tab.querySelectorAll('.dp-tab-bracket')
          activeBrackets.forEach(
            (b) => ((b as HTMLElement).style.opacity = '1'),
          )

          const view = preview.querySelector<HTMLElement>(`#dp-view-${target}`)
          if (view) view.classList.add('dp-view-active')
        })
      })
    })
  })
</script>
