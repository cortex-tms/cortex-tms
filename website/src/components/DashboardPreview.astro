    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }
  .dp-progress-wrapper > .dp-progress-bar-container {
    flex: 1;
    margin: 0;
  }

  .dp-sprint-stats {
