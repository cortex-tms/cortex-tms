---
/**
 * Terminal - Blog post code terminal
 */
import TerminalWindow from '../TerminalWindow.astro';

interface Props {
  title?: string;
  content?: string;
}

const { title, content } = Astro.props;
---

<TerminalWindow title={title} copyText={content}>
  <pre><code>{content || ''}<slot /></code></pre>
</TerminalWindow>

<style>
  pre {
    overflow-x: auto;
    color: #e2e8f0;
    font-family: var(--sl-font-mono);
    font-size: 1em;
    margin: 0;
    line-height: 1.6;
    padding: 0; /* tw-content handles padding */
  }

  code { font-family: var(--sl-font-mono); }

  :root[data-theme='light'] pre { color: #1f2937; }
</style>
