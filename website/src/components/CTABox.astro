---
/**
 * CTABox Component
 *
 * Call-to-action box with gradient background
 * Extracted from branding/designs/library
 */
import GlassButton from './GlassButton.astro';
import '../styles/glass-library.css';
import '../styles/cta-box.css';

interface Props {
  title: string
  description: string
  primaryButtonText: string
  primaryButtonHref: string
  secondaryButtonText?: string
  secondaryButtonHref?: string
}

const {
  title,
  description,
  primaryButtonText,
  primaryButtonHref,
  secondaryButtonText,
  secondaryButtonHref,
} = Astro.props
---

<div class='glass-liquid-panel cta-box'>
  <div class='bloom'></div>
  <div class='panel-content'>
    <h3>{title}</h3>
    <p>{description}</p>
    <div class='btn-group'>
      <GlassButton variant='neon' href={primaryButtonHref}>
        {primaryButtonText}
      </GlassButton>
      {
        secondaryButtonText && secondaryButtonHref && (
          <GlassButton variant='prism' href={secondaryButtonHref}>
            {secondaryButtonText}
          </GlassButton>
        )
      }
    </div>
  </div>
</div>
